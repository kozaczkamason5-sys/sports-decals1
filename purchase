    <script>
        function sendEmail() {
            const name = document.getElementById("name").value;
            const product = document.getElementById("product").value;
            const details = document.getElementById("details").value;

            const email = "orders@sdsportsdecals.com"; // CHANGE THIS TO YOUR EMAIL
            const subject = encodeURIComponent("New Order from " + name);
            const body = encodeURIComponent(
                "Customer Name: " + name + "\n" +
                "Product: " + product + "\n\n" +
                "Order Details:\n" + details
            );

            const mailtoLink = `mailto:${email}?subject=${subject}&body=${body}`;
            window.location.href = mailtoLink;
        }
    </script>
</head>

<body>
    <h1>Place Your Order</h1>
    <div class="container">
        <label>Your Name</label>
        <input id="name" type="text" placeholder="Enter your full name" required />

        <label>Product</label>
        <select id="product">
            <option value="Custom Football Helmet Decal">Custom Football Helmet Decal</option>
            <option value="Team Logo Sticker Pack">Team Logo Sticker Pack</option>
            <option value="Football Visor">Football Visor</option>
        </select>

        <label>Order Details</label>
        <textarea id="details" rows="5" placeholder="Describe colors, sizes, quantity, or customization"></textarea>

        <button onclick="sendEmail()">Submit Order</button>
    </div>
</body>
